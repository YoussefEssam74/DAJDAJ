@model DAJDAJ.Entities.ViewModels.ProductVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="productForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product.Id" />

            <!-- Basic Information -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Basic Information</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="product.Name" class="control-label">Product Name</label>
                                <input asp-for="product.Name" class="form-control" placeholder="Enter product name" />
                                <span asp-validation-for="product.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="product.Price" class="control-label">Price</label>
                                <div class="input-group">
                                    <input asp-for="product.Price" class="form-control" placeholder="0.00" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">USD</span>
                                    </div>
                                </div>
                                <span asp-validation-for="product.Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="product.CategoryId" class="control-label">Category</label>
                        <select asp-for="product.CategoryId" asp-items="Model.categorylist" class="form-control">
                            <option disabled>-- Select Category --</option>
                        </select>
                        <span asp-validation-for="product.CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Image Management -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Image Management</h3>
                </div>
                <div class="card-body">
                    <!-- Main Image -->
                    <div class="form-group">
                        <label asp-for="Img" class="control-label">Main Image</label>
                        <div class="custom-file">
                            <input asp-for="Img" type="file" class="custom-file-input" id="mainImageInput" accept="image/*" />
                            <label class="custom-file-label" for="mainImageInput">Choose main image</label>
                        </div>
                        <span asp-validation-for="Img" class="text-danger"></span>
                        
                        <!-- Main Image Preview -->
                        <div class="mt-3">
                            @if (!string.IsNullOrEmpty(Model.product.Img))
                            {
                                <img id="mainImagePreview" src="~/@Model.product.Img" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" alt="Main image preview" />
                            }
                            else
                            {
                                <img id="mainImagePreview" src="/Images/placeholder.jpg" class="img-thumbnail" style="max-width: 200px; max-height: 200px; display: none;" alt="Main image preview" />
                            }
                        </div>
                    </div>

                    <!-- Display Current Images with Colors -->
                    @if (Model.product.ProductImages != null && Model.product.ProductImages.Any())
                    {
                        <div class="form-group">
                            <label class="control-label">Current Images with Colors</label>
                            <div class="row" id="currentImagesContainer">
                                @foreach (var img in Model.product.ProductImages)
                                {
                                    <div class="col-md-4 col-sm-6 mb-3 current-image-item">
                                        <div class="card border">
                                            <img src="~/@img.ImagePath" class="card-img-top" style="height: 150px; object-fit: cover;" />
                                            <div class="card-body p-2 text-center">
                                                <small class="text-muted d-block">
                                                    <i class="fas fa-palette mr-1"></i>
                                                    Color: @(string.IsNullOrEmpty(img.Color) ? "Not specified" : img.Color)
                                                </small>
                                                <button type="button" class="btn btn-danger btn-sm mt-2 delete-existing-image" 
                                                        data-image-id="@img.Id" data-image-path="@img.ImagePath">
                                                    <i class="fas fa-trash mr-1"></i>Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- New Images with Colors Section -->
                    <div class="form-group">
                        <label class="control-label">Add New Images with Colors</label>
                        <div id="imageColorContainer">
                            <div class="image-color-row card border mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <label>Image</label>
                                            <div class="custom-file">
                                                <input name="Images" type="file" class="custom-file-input image-input" accept="image/*" />
                                                <label class="custom-file-label">Choose image</label>
                                            </div>
                                            <div class="image-preview mt-2" style="display: none;">
                                                <img class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <label>Color</label>
                                            <select name="ImageColors" class="form-control color-select">
                                                <option value="">Select Color</option>
                                                @if (Model.AvailableColors != null)
                                                {
                                                    @foreach (var color in Model.AvailableColors)
                                                    {
                                                        <option value="@color.Value">@color.Text</option>
                                                    }
                                                }
                                            </select>
                                            <div class="color-preview mt-2" style="display: none;">
                                                <div class="color-box" style="width: 30px; height: 30px; border: 1px solid #ccc; border-radius: 50%;"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-2 d-flex align-items-end">
                                            <button type="button" class="btn btn-danger remove-image-row" style="display:none;">
                                                <i class="fas fa-trash mr-1"></i>Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" id="addImageRow" class="btn btn-success btn-sm">
                            <i class="fas fa-plus mr-1"></i>Add Another Image
                        </button>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle mr-1"></i>
                            Note: Adding new images will replace all current images
                        </small>
                    </div>
                </div>
            </div>

            <!-- Product Properties -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Product Properties</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="product.Color" class="control-label">Available Colors</label>
                                <input asp-for="product.Color" class="form-control" placeholder="Example: Black,White,Red" />
                                <small class="form-text text-muted">Separate colors with commas</small>
                                <span asp-validation-for="product.Color" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="product.Size" class="control-label">Available Sizes</label>
                                <input asp-for="product.Size" class="form-control" placeholder="Example: S,M,L,XL" 
                                       id="sizeInput" />
                                <small class="form-text text-muted">Separate sizes with commas</small>
                                <span asp-validation-for="product.Size" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="product.IsOneSize" class="custom-control-input" id="isOneSizeCheck" />
                            <label asp-for="product.IsOneSize" class="custom-control-label" for="isOneSizeCheck">
                                One Size Only
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Control Buttons -->
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-success btn-lg mr-2" id="saveBtn">
                                <i class="fas fa-save mr-1"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg" id="backBtn">
                                <i class="fas fa-arrow-left mr-1"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Preview Section -->
    <div class="col-md-4">
        <div class="card sticky-top">
            <div class="card-header">
                <h3 class="card-title">Product Preview</h3>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.product.Img))
                {
                    <img id="productPreview" src="~/@Model.product.Img" 
                         class="img-fluid rounded border shadow-sm" 
                         style="max-width: 100%; height: auto; min-height: 200px;" 
                         alt="Product preview" />
                }
                else
                {
                    <img id="productPreview" src="/Images/placeholder.jpg" 
                         class="img-fluid rounded border shadow-sm" 
                         style="max-width: 100%; height: auto; min-height: 200px;" 
                         alt="Product preview" />
                }
                
                <div class="mt-3">
                    <h5 class="product-name-preview">@(Model.product.Name ?? "Product Name")</h5>
                    <h4 class="text-success product-price-preview">
                        @Model.product.Price.ToString("C", new System.Globalization.CultureInfo("en-US"))
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        console.log('=== Edit Product Page Loaded ===');
        console.log('jQuery available:', typeof $ !== 'undefined');
        console.log('Toastr available:', typeof toaster !== 'undefined');
        
        $(document).ready(function() {
            console.log('Document ready - Edit Product page');
            
            let imageRowCount = 1;
            
            // Main image preview
            $('#mainImageInput').on('change', function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#mainImagePreview, #productPreview').attr('src', e.target.result).show();
                        console.log('Main image preview updated');
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Product name and price preview
            $('input[name="product.Name"]').on('input', function() {
                const value = $(this).val() || 'Product Name';
                $('.product-name-preview').text(value);
            });

            $('input[name="product.Price"]').on('input', function() {
                const price = parseFloat($(this).val()) || 0;
                const formattedPrice = price.toLocaleString('en-US', {
                    style: 'currency',
                    currency: 'USD'
                });
                $('.product-price-preview').text(formattedPrice);
            });

            // Update file labels
            $(document).on('change', '.custom-file-input', function() {
                const fileName = $(this).val().split('\\').pop();
                $(this).siblings('.custom-file-label').addClass('selected').html(fileName || 'Choose file');
            });

            // Manage one size checkbox
            $('#isOneSizeCheck').on('change', function() {
                const isChecked = $(this).is(':checked');
                $('#sizeInput').prop('disabled', isChecked);
                if (isChecked) {
                    $('#sizeInput').val('One Size');
                } else {
                    $('#sizeInput').val('');
                }
            });

            // Add new image row
            $('#addImageRow').on('click', function() {
                console.log('Adding new image row');
                try {
                    const container = $('#imageColorContainer');
                    const newRow = container.find('.image-color-row').first().clone();
                    
                    // Clear values
                    newRow.find('.image-input').val('');
                    newRow.find('.color-select').val('');
                    newRow.find('.custom-file-label').removeClass('selected').text('Choose image');
                    newRow.find('.image-preview').hide();
                    newRow.find('.color-preview').hide();
                    
                    // Show delete button
                    newRow.find('.remove-image-row').show();
                    
                    container.append(newRow);
                    imageRowCount++;
                    updateRemoveButtons();
                    
                    if (typeof toaster !== 'undefined') {
                        toaster.success('New image row added');
                    }
                } catch (error) {
                    console.error('Error adding image row:', error);
                    if (typeof toaster !== 'undefined') {
                        toaster.error('Error adding image row');
                    }
                }
            });

            // Remove row
            $(document).on('click', '.remove-image-row', function() {
                console.log('Removing image row');
                $(this).closest('.image-color-row').remove();
                imageRowCount--;
                updateRemoveButtons();
                
                if (typeof toaster !== 'undefined') {
                    toaster.info('Image row removed');
                }
            });

            // Preview new images
            $(document).on('change', '.image-input', function() {
                const file = this.files[0];
                const preview = $(this).closest('.image-color-row').find('.image-preview');
                const img = preview.find('img');
                
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        img.attr('src', e.target.result);
                        preview.show();
                    };
                    reader.readAsDataURL(file);
                } else {
                    preview.hide();
                }
            });

            // Color preview
            $(document).on('change', '.color-select', function() {
                const colorValue = $(this).val();
                const preview = $(this).closest('.image-color-row').find('.color-preview');
                const colorBox = preview.find('.color-box');
                
                if (colorValue) {
                    const colorMap = {
                        'black': '#000000',
                        'white': '#ffffff',
                        'red': '#ff0000',
                        'blue': '#0000ff',
                        'green': '#008000',
                        'yellow': '#ffff00',
                        'pink': '#ffc0cb',
                        'brown': '#a52a2a',
                        'gray': '#808080',
                        'purple': '#800080',
                        'orange': '#ffa500',
                        'burgundy': '#800020',
                        'gold': '#ffd700',
                        'silver': '#c0c0c0',
                        'navy': '#000080',
                        'olive': '#808000'
                    };
                    
                    colorBox.css('background-color', colorMap[colorValue] || '#cccccc');
                    preview.show();
                } else {
                    preview.hide();
                }
            });

            // Delete existing images
            $(document).on('click', '.delete-existing-image', function() {
                const imageCard = $(this).closest('.current-image-item');
                
                const deleteImage = () => {
                    imageCard.fadeOut(300, function() {
                        $(this).remove();
                    });
                    
                    if (typeof toaster !== 'undefined') {
                        toaster.success('Image will be deleted when you save the product');
                    }
                };
                
                if (typeof Swal !== 'undefined') {
                    Swal.fire({
                        title: 'Are you sure?',
                        text: 'This image will be removed from the product',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Yes, remove it',
                        cancelButtonText: 'Cancel'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            deleteImage();
                        }
                    });
                } else {
                    if (confirm('Are you sure you want to remove this image?')) {
                        deleteImage();
                    }
                }
            });

            function updateRemoveButtons() {
                const rows = $('.image-color-row');
                rows.each(function(index) {
                    const removeBtn = $(this).find('.remove-image-row');
                    if (rows.length > 1) {
                        removeBtn.show();
                    } else {
                        removeBtn.hide();
                    }
                });
            }

            // Form submission with validation
            $('#productForm').on('submit', function(e) {
                console.log('Form submission started');
                
                // Basic validation
                const productName = $('input[name="product.Name"]').val();
                const productPrice = $('input[name="product.Price"]').val();
                const categoryId = $('select[name="product.CategoryId"]').val();
                
                if (!productName || productName.trim() === '') {
                    e.preventDefault();
                    if (typeof toaster !== 'undefined') {
                        toaster.error('Product name is required');
                    } else {
                        alert('Product name is required');
                    }
                    return false;
                }
                
                if (!productPrice || parseFloat(productPrice) <= 0) {
                    e.preventDefault();
                    if (typeof toaster !== 'undefined') {
                        toaster.error('Product price must be greater than 0');
                    } else {
                        alert('Product price must be greater than 0');
                    }
                    return false;
                }
                
                if (!categoryId) {
                    e.preventDefault();
                    if (typeof toaster !== 'undefined') {
                        toaster.error('Please select a category');
                    } else {
                        alert('Please select a category');
                    }
                    return false;
                }
                
                // Show loading state
                $('#saveBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-1"></i>Saving...');
                
                console.log('Form validation passed, submitting...');
                return true;
            });

            // Initialize
            updateRemoveButtons();

            // Initialize one size checkbox state
            if ($('#isOneSizeCheck').is(':checked')) {
                $('#sizeInput').prop('disabled', true);
            }
            
            console.log('Edit Product page initialization complete');
            
            // Show success message if edit was successful
            if (typeof toaster !== 'undefined') {
                setTimeout(() => {
                    toaster.info('Edit Product page ready');
                }, 500);
            }
        });
    </script>
}