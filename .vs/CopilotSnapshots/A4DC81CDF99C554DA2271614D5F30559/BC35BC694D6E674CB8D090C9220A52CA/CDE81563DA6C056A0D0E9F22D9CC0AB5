@model DAJDAJ.Entities.ViewModels.ProductVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@if (TempData["Errors"] != null)
{
    <div class="alert alert-danger">@TempData["Errors"]</div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="productForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product.Id" />

            <div class="form-group">
                <label asp-for="product.Name" class="control-label">Product Name</label>
                <input asp-for="product.Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Price" class="control-label">Price</label>
                <input asp-for="product.Price" class="form-control" placeholder="0.00" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Img" class="control-label">Main Image</label>
                <input asp-for="Img" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Img" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.product.Img))
                {
                    <div class="mt-2">
                        <small class="text-muted">Current image:</small><br>
                        <img src="~/@Model.product.Img" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" alt="Current main image" />
                        <small class="text-info d-block">Leave empty to keep current image</small>
                    </div>
                }
            </div>

            <!-- Images with Colors Section -->
            <div class="form-group">
                <label class="control-label">Images with Colors</label>
                
                <!-- Display Current Images -->
                @if (Model.product.ProductImages != null && Model.product.ProductImages.Any())
                {
                    <div class="mb-3">
                        <small class="text-muted">Current images:</small>
                        <div class="row">
                            @foreach (var img in Model.product.ProductImages)
                            {
                                <div class="col-md-3 col-sm-4 mb-2">
                                    <div class="card">
                                        <img src="~/@img.ImagePath" class="card-img-top" style="height: 100px; object-fit: cover;" />
                                        <div class="card-body p-2 text-center">
                                            <small class="text-muted">@(string.IsNullOrEmpty(img.Color) ? "No color" : img.Color)</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <small class="text-info">Add new images below to replace current images</small>
                    </div>
                }
                
                <div id="imageColorContainer">
                    <div class="image-color-row row mb-3">
                        <div class="col-md-6">
                            <label>Image</label>
                            <input name="Images" type="file" class="form-control image-input" accept="image/*" />
                        </div>
                        <div class="col-md-4">
                            <label>Color</label>
                            <select name="ImageColors" class="form-control color-select">
                                <option value="">Select Color</option>
                                @foreach (var color in Model.AvailableColors)
                                {
                                    <option value="@color.Value">@color.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="btn btn-danger remove-image-row" style="display:none;">Delete</button>
                        </div>
                    </div>
                </div>
                <button type="button" id="addImageRow" class="btn btn-success btn-sm">Add Another Image</button>
                <small class="form-text text-muted">Leave images empty to keep current images</small>
            </div>

            <div class="form-group">
                <label asp-for="product.CategoryId" class="control-label">Category</label>
                <select asp-for="product.CategoryId" asp-items="Model.categorylist" class="form-control">
                    <option disabled>-- Select Category --</option>
                </select>
                <span asp-validation-for="product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Color" class="control-label">Available Colors (comma separated)</label>
                <input asp-for="product.Color" class="form-control" placeholder="Example: Black,White,Red" />
                <span asp-validation-for="product.Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Size" class="control-label">Available Sizes (comma separated)</label>
                <input asp-for="product.Size" class="form-control" placeholder="Example: S,M,L,XL" id="sizeInput" />
                <span asp-validation-for="product.Size" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="product.IsOneSize" class="form-check-input" id="isOneSizeCheck" />
                <label asp-for="product.IsOneSize" class="form-check-label">One Size Only</label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Update Product" class="btn btn-primary" id="saveBtn" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <!-- Preview Section -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Product Preview</h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model.product.Img))
                {
                    <img id="productPreview" src="~/@Model.product.Img" 
                         class="img-fluid rounded border shadow-sm" 
                         style="max-width: 100%; height: auto; min-height: 200px;" 
                         alt="Product preview" />
                }
                else
                {
                    <img id="productPreview" src="/Images/placeholder.jpg" 
                         class="img-fluid rounded border shadow-sm" 
                         style="max-width: 100%; height: auto; min-height: 200px;" 
                         alt="Product preview" />
                }
                
                <div class="mt-3">
                    <h5 class="product-name-preview">@(Model.product.Name ?? "Product Name")</h5>
                    <h4 class="text-success product-price-preview">
                        $@Model.product.Price.ToString("0.00")
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let imageRowCount = 1;
            
            // Main image preview
            document.querySelector('input[name="Img"]').addEventListener('change', function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        document.getElementById('productPreview').src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Product name and price live preview
            document.querySelector('input[name="product.Name"]').addEventListener('input', function() {
                document.querySelector('.product-name-preview').textContent = this.value || 'Product Name';
            });

            document.querySelector('input[name="product.Price"]').addEventListener('input', function() {
                const price = parseFloat(this.value) || 0;
                document.querySelector('.product-price-preview').textContent = '$' + price.toFixed(2);
            });

            // One size checkbox handling
            document.getElementById('isOneSizeCheck').addEventListener('change', function() {
                const sizeInput = document.getElementById('sizeInput');
                if (this.checked) {
                    sizeInput.value = 'One Size';
                    sizeInput.disabled = true;
                } else {
                    sizeInput.disabled = false;
                    if (sizeInput.value === 'One Size') {
                        sizeInput.value = '';
                    }
                }
            });

            // Initialize one size checkbox state
            if (document.getElementById('isOneSizeCheck').checked) {
                document.getElementById('sizeInput').disabled = true;
            }
            
            // Add new row for images and colors
            document.getElementById('addImageRow').addEventListener('click', function() {
                const container = document.getElementById('imageColorContainer');
                const newRow = container.querySelector('.image-color-row').cloneNode(true);
                
                // Clear values
                newRow.querySelector('.image-input').value = '';
                newRow.querySelector('.color-select').value = '';
                
                // Show delete button
                newRow.querySelector('.remove-image-row').style.display = 'block';
                
                container.appendChild(newRow);
                imageRowCount++;
                updateRemoveButtons();
            });
            
            // Delete row
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-image-row')) {
                    e.target.closest('.image-color-row').remove();
                    imageRowCount--;
                    updateRemoveButtons();
                }
            });
            
            function updateRemoveButtons() {
                const rows = document.querySelectorAll('.image-color-row');
                rows.forEach((row, index) => {
                    const removeBtn = row.querySelector('.remove-image-row');
                    if (rows.length > 1) {
                        removeBtn.style.display = 'block';
                    } else {
                        removeBtn.style.display = 'none';
                    }
                });
            }

            // Form submission
            document.getElementById('productForm').addEventListener('submit', function() {
                document.getElementById('saveBtn').disabled = true;
                document.getElementById('saveBtn').value = 'Updating...';
            });
        });
    </script>
}