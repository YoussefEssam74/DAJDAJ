@model Shoppingcart
@{
    ViewData["Title"] = "Product Details";
    var productImages = Model.ProductImages ?? new List<string>();
    var imageColorMap = ViewBag.ImageColorMap as Dictionary<string, string> ?? new Dictionary<string, string>();
    var colorMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
    {
        { "burgendy", "#800020" },
        { "burgundy", "#800020" },
        { "red", "red" },
        { "white", "white" },
        { "black", "black" },
        { "blue", "blue" },
        { "green", "green" },
        { "yellow", "yellow" },
        { "pink", "pink" },
        { "brown", "brown" },
        { "gray", "gray" },
        { "purple", "purple" },
        { "orange", "orange" }
    };
}

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="ProductId" value="@Model.product.Id" />
    <input type="hidden" name="Count" id="Count" value="@Model.Count" />

    <div class="container py-5">
        <div class="row">
            <div class="col-md-6">
                <!-- Image Carousel -->
                <div class="position-relative text-center d-inline-block" style="width: 100%; max-width: 500px; height: 500px; overflow: hidden; border-radius: 12px;">
                    <img id="carouselImage" src="@productImages.FirstOrDefault()" alt="Product Image"
                         class="img-fluid rounded border zoomable"
                         style="width: 100%; height: 100%; object-fit: cover; object-position: center; transition: transform 0.3s ease; cursor: zoom-in;" 
                         data-bs-toggle="modal" data-bs-target="#imageModal" onclick="showImageInModal(this.src)" />

                    @if (productImages.Count > 1)
                    {
                        <button onclick="prevImage()" type="button" class="btn btn-dark position-absolute"
                                style="top: 50%; left: 10px; transform: translateY(-50%); z-index: 10; opacity: 0.7;">
                            ⟨
                        </button>
                        <button onclick="nextImage()" type="button" class="btn btn-dark position-absolute"
                                style="top: 50%; right: 10px; transform: translateY(-50%); z-index: 10; opacity: 0.7;">
                            ⟩
                        </button>
                        <button id="autoplayBtn" onclick="toggleAutoplay()" type="button" class="btn btn-secondary position-absolute"
                                style="bottom: 10px; right: 10px; z-index: 10; opacity: 0.8;">
                            <i class="fas fa-play" id="autoplayIcon"></i>
                        </button>
                    }
                </div>
            </div>

            <div class="col-md-6">
                <h2>@Model.product.Name</h2>
                <h4 class="text-muted">@Model.product.Price.ToString("0.00") EGP</h4>

                @if (Model.Sizes != null && Model.Sizes.Any())
                {
                    <div class="mb-3">
                        <label class="fw-bold">Size:</label>
                        <div class="d-flex flex-wrap gap-2 mt-1" id="size-options">
                            @for (int i = 0; i < Model.Sizes.Count; i++)
                            {
                                var size = Model.Sizes[i];
                                var isSoldOut = size.ToLower().Contains("soldout");
                                var displaySize = size.Replace("soldout", "", StringComparison.OrdinalIgnoreCase).Trim();
                                <div class="form-check me-3">
                                    <input class="form-check-input" type="radio" name="SelectedSize" id="sizeRadio_@i" value="@displaySize" @(isSoldOut ? "disabled" : "") @(Model.SelectedSize == displaySize ? "checked" : "") />
                                    <label class="form-check-label" for="sizeRadio_@i">@displaySize</label>
                                </div>
                            }
                        </div>
                        @if (ViewData.ModelState["SelectedSize"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["SelectedSize"].Errors[0].ErrorMessage</span>
                        }
                    </div>
                }
                else if (Model.product.IsOneSize)
                {
                    <div class="mb-3">
                        <label class="fw-bold">Size:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="SelectedSize" id="sizeRadio_onesize" value="One Size" checked />
                            <label class="form-check-label" for="sizeRadio_onesize">One Size</label>
                        </div>
                        @if (ViewData.ModelState["SelectedSize"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["SelectedSize"].Errors[0].ErrorMessage</span>
                        }
                    </div>
                }

                @if (Model.Colors != null && Model.Colors.Any())
                {
                    <div class="mb-3">
                        <label class="fw-bold">Color:</label>
                        <div class="d-flex flex-wrap gap-2 mt-2">
                            @for (int i = 0; i < Model.Colors.Count; i++)
                            {
                                var color = Model.Colors[i];
                                var isSoldOut = color.ToLower().Contains("soldout");
                                var displayColor = color.Replace("soldout", "", StringComparison.OrdinalIgnoreCase).Trim();
                                string colorCode = colorMap.ContainsKey(displayColor.ToLower()) ? colorMap[displayColor.ToLower()] : "#cccccc";
                                <div class="form-check me-3 d-flex align-items-center">
                                    <input class="form-check-input" type="radio" name="SelectedColor" id="colorRadio_@i" value="@displayColor" @(isSoldOut ? "disabled" : "") @(Model.SelectedColor == displayColor ? "checked" : "") />
                                    <label class="form-check-label d-flex align-items-center" for="colorRadio_@i">
                                        <span style="display:inline-block;width:22px;height:22px;border-radius:50%;background:@colorCode;border:1px solid #aaa;margin-right:7px;"></span>
                                        @displayColor
                                    </label>
                                </div>
                            }
                        </div>
                        @if (ViewData.ModelState["SelectedColor"]?.Errors.Count > 0)
                        {
                            <span class="text-danger">@ViewData.ModelState["SelectedColor"].Errors[0].ErrorMessage</span>
                        }
                    </div>
                }

                <div class="mb-3">
                    <label class="fw-bold">Quantity:</label>
                    <div class="input-group w-25">
                        <button type="button" class="btn btn-outline-secondary" onclick="updateCount(-1)">-</button>
                        <input type="text" id="countInput" class="form-control text-center" value="@Model.Count" readonly />
                        <button type="button" class="btn btn-outline-secondary" onclick="updateCount(1)">+</button>
                    </div>
                </div>

                <div class="d-flex flex-column gap-2">
                    <button class="btn text-white" style="background-color: #f06292;" type="submit">
                        <i class="bi bi-cart-fill me-1"></i> Add to Cart
                    </button>
                    <button class="btn btn-dark text-white" type="button">Buy it Now</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Image Zoom Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" style="background: transparent; box-shadow: none; border: none;">
            <div class="modal-header" style="background: transparent; border-bottom: none;">
                <h5 class="modal-title" id="imageModalLabel">@Model.product.Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-0" style="background: transparent;">
                <img id="modalImage" src="" class="img-fluid w-100" alt="Product Image" style="max-height: 80vh; object-fit: contain; background: transparent; box-shadow: none;" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const images = @Html.Raw(Json.Serialize(productImages));
        let currentIndex = 0;
        let autoplayInterval = null;
        let isAutoPlaying = false;

        function showImage(index) {
            const img = document.getElementById("carouselImage");
            if (img && images.length > 0) {
                img.src = images[index];
            }
        }
        function prevImage() {
            stopAutoplay();
            currentIndex = (currentIndex - 1 + images.length) % images.length;
            showImage(currentIndex);
        }
        function nextImage() {
            currentIndex = (currentIndex + 1) % images.length;
            showImage(currentIndex);
        }
        function startAutoplay() {
            if (images.length > 1) {
                isAutoPlaying = true;
                autoplayInterval = setInterval(() => {
                    nextImage();
                }, 3000);
                const icon = document.getElementById('autoplayIcon');
                if (icon) {
                    icon.className = 'fas fa-pause';
                }
            }
        }
        function stopAutoplay() {
            if (autoplayInterval) {
                clearInterval(autoplayInterval);
                autoplayInterval = null;
                isAutoPlaying = false;
                const icon = document.getElementById('autoplayIcon');
                if (icon) {
                    icon.className = 'fas fa-play';
                }
            }
        }
        function toggleAutoplay() {
            if (isAutoPlaying) {
                stopAutoplay();
            } else {
                startAutoplay();
            }
        }
        window.addEventListener('load', function() {
            if (images.length > 1) {
                setTimeout(startAutoplay, 1000);
            }
        });
        document.getElementById("carouselImage").addEventListener('mouseover', function () {
            if (!isAutoPlaying) {
                this.style.transform = "scale(1.1)";
            }
        });
        document.getElementById("carouselImage").addEventListener('mouseout', function () {
            this.style.transform = "scale(1)";
        });
        function showImageInModal(src) {
            document.getElementById('modalImage').src = src;
        }
        function updateCount(change) {
            const countInput = document.getElementById("countInput");
            const hiddenCount = document.getElementById("Count");
            let current = parseInt(countInput.value);
            let updated = current + change;
            if (updated >= 1 && updated <= 100) {
                countInput.value = updated;
                hiddenCount.value = updated;
            }
        }
    </script>
    <style>
        .form-check-input[type="radio"]:checked + .form-check-label span {
            border: 2px solid #007bff !important;
        }
    </style>
}
