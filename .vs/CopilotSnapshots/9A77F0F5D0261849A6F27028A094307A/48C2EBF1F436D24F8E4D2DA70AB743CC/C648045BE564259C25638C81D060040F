                            </div>

                            <div class="col-md-2 d-flex align-items-end">
                                <button type="button" class="btn btn-danger btn-sm remove-image-row" style="display:none;">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <button type="button" id="addImageRow" class="btn btn-success btn-sm mt-2">
                        <i class="fas fa-plus"></i> Add Another Image
                    </button>
                    <small class="text-muted d-block mt-1">
                        <i class="fas fa-info-circle"></i> Upload new images to replace existing ones, or just change colors to keep current images.
                    </small>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="product.CategoryId" class="control-label">Category</label>
                <select asp-for="product.CategoryId" asp-items="Model.categorylist" class="form-control">
                    <option disabled>-- Select Category --</option>
                </select>
                <span asp-validation-for="product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Color" class="control-label">Available Colors (comma separated)</label>
                <input asp-for="product.Color" class="form-control" placeholder="Example: Black,White,Red" />
                <span asp-validation-for="product.Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Size" class="control-label">Available Sizes (comma separated)</label>
                <input asp-for="product.Size" class="form-control" placeholder="Example: S,M,L,XL" id="sizeInput" />
                <span asp-validation-for="product.Size" class="text-danger"></span>
            </div>

           

            <div class="form-group mt-3">
                <input type="submit" value="Update Product" class="btn btn-primary" id="saveBtn" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <!-- Preview Section -->
    <div class="col-md-4">
        <div class="card sticky-top">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-eye"></i> Product Preview</h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model?.product?.Img))
                {
                    <img id="productPreview" src="~/@Model.product.Img"
                         class="img-fluid rounded border shadow-sm"
                         style="max-width: 100%; height: auto; min-height: 200px;"
                         alt="Product preview"
                         onerror="this.src='/images/placeholder.jpg'" />
                }
                else
                {
                    <img id="productPreview" src="/images/placeholder.jpg"
                         class="img-fluid rounded border shadow-sm"
                         style="max-width: 100%; height: auto; min-height: 200px;"
                         alt="Product preview" />
                }

                <div class="mt-3">
                    <h5 class="product-name-preview text-primary">@(Model?.product?.Name ?? "Product Name")</h5>
                    <h4 class="text-success product-price-preview">
                        $@(Model?.product?.Price.ToString("0.00") ?? "0.00")
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Edit Product page loaded');
            let imageRowCount = @(Model?.product?.ProductImages?.Count ?? 1);

            // Elements
            const isOneSizeCheck = document.getElementById('isOneSizeCheck');
            const sizeInput = document.getElementById('sizeInput');
            const addImageRowBtn = document.getElementById('addImageRow');
            const productForm = document.getElementById('productForm');
            const saveBtn = document.getElementById('saveBtn');
            const productPreview = document.getElementById('productPreview');
            const productNamePreview = document.querySelector('.product-name-preview');
            const productPricePreview = document.querySelector('.product-price-preview');

            // Main image preview
            const imgInput = document.querySelector('input[name="Img"]');
            if (imgInput) {
                imgInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            productPreview.src = e.target.result;
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            // Product name live preview
            const nameInput = document.querySelector('input[name="product.Name"]');
            if (nameInput) {
                nameInput.addEventListener('input', function(e) {
                    productNamePreview.textContent = e.target.value || '@Model?.product?.Name';
                });
            }

            // Product price live preview
            const priceInput = document.querySelector('input[name="product.Price"]');
            if (priceInput) {
                priceInput.addEventListener('input', function(e) {
                    const price = parseFloat(e.target.value) || @Model?.product?.Price;
                    productPricePreview.textContent = '$' + price.toFixed(2);
                });
            }

          

            // Add new row for images and colors
            if (addImageRowBtn) {
                addImageRowBtn.addEventListener('click', function() {
                    const container = document.getElementById('imageColorContainer');
                    if (container) {
                        const rows = container.querySelectorAll('.image-color-row');
                        const lastRow = rows[rows.length - 1];

                        if (lastRow) {
                            const newRow = lastRow.cloneNode(true);

                            // Clear values
                            newRow.querySelector('.image-input').value = '';
                            newRow.querySelector('.color-select').selectedIndex = 0;

                            // Clear hidden fields
                            newRow.querySelector('input[name="ExistingImagePaths"]').value = '';
                            newRow.querySelector('input[name="ExistingImageIds"]').value = '0';

                            // Show delete button
                            const removeBtn = newRow.querySelector('.remove-image-row');
                            if (removeBtn) removeBtn.style.display = 'block';

                            container.appendChild(newRow);
                            imageRowCount++;
                            updateRemoveButtons();
                        }
                    }
                });
            }

            // Delete row
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-image-row') || e.target.closest('.remove-image-row')) {
                    const button = e.target.closest('.remove-image-row');
                    const row = button.closest('.image-color-row');
                    const existingPath = row.querySelector('input[name="ExistingImagePaths"]').value;

                    if (existingPath) {
                        if (!confirm('Are you sure you want to remove this image?')) {
                            return;
                        }
                    }

                    row.remove();
                    imageRowCount--;
                    updateRemoveButtons();
                }
            });

            function updateRemoveButtons() {
                const rows = document.querySelectorAll('.image-color-row');
                rows.forEach((row, index) => {
                    const removeBtn = row.querySelector('.remove-image-row');
                    if (removeBtn) {
                        removeBtn.style.display = rows.length > 1 ? 'block' : 'none';
                    }
                });
            }

            // Form validation and submission
            if (productForm && saveBtn) {
                productForm.addEventListener('submit', function(e) {
                    console.log('Form submitted');

                    // Basic validation
                    if (!nameInput.value.trim()) {
                        e.preventDefault();
                        alert('Product name is required');
                        nameInput.focus();
                        return false;
                    }

                    if (!priceInput.value || parseFloat(priceInput.value) <= 0) {
                        e.preventDefault();
                        alert('Product price must be greater than 0');
                        priceInput.focus();
                        return false;
                    }

                    // Show loading state
                    saveBtn.disabled = true;
                    saveBtn.value = 'Updating...';

                    return true;
                });
            }

            // Initialize remove buttons
            updateRemoveButtons();
        });
    </script>
}