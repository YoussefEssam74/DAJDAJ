    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function updateShipping() {
            var city = document.getElementById('citySelect').value;
            var shipping = (city && (city.toLowerCase() === 'cairo' || city.toLowerCase() === 'giza')) ? 60 : (city ? 70 : '');
            document.getElementById('shippingPriceValue').value = shipping;
            document.getElementById('orderSummaryShipping').textContent = shipping ? shipping + ' EGP' : '--';
            updateTotalPrice();
        }
        function updateTotalPrice() {
            var total = parseFloat('@totalPrice');
            var shipping = parseFloat(document.getElementById('shippingPriceValue').value) || 0;
            var grand = total + shipping;
            document.getElementById('orderSummaryTotal').textContent = grand > 0 ? grand + ' EGP' : '';
        }
        document.addEventListener('DOMContentLoaded', function() {
            updateTotalPrice();
        });
    </script>
