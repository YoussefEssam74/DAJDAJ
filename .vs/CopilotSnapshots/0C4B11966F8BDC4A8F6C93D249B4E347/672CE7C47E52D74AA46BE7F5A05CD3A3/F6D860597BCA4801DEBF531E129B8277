<body>

    <div class="container py-5">
        <h2 class="mb-4 text-center">Your Shopping Cart</h2>
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model.CartsList)
                {
                    var productImages = item.product.ProductImages?.Where(img => !string.IsNullOrEmpty(img.Color)).ToList() ?? new List<DAJDAJ.Entities.Models.ProductImage>();
                    var colorImages = productImages.GroupBy(img => img.Color.Trim().ToLower()).ToDictionary(g => g.Key, g => g.First().ImagePath);
                    var selectedColor = item.SelectedColor?.Trim().ToLower();
                    var selectedImg = colorImages.ContainsKey(selectedColor) ? colorImages[selectedColor] : item.product.Img;
                <div class="product-card row align-items-center">
                    <div class="col-md-3 text-center">
                        <img class="product-image main-product-image-@item.Id" src="~/@selectedImg" alt="@item.product.Name" />
                    </div>
                    <div class="col-md-6">
                        <div class="product-name mb-2">
                            <a href="#">@item.product.Name</a>
                        </div>
                        <div class="text-muted">
                            <div>
                                <label class="checkout-label">Size <span class="required">*</span></label>
                                <strong>
                                    @if (string.IsNullOrWhiteSpace(item.SelectedSize))
                                    {
                                        <span class="text-danger ms-2">يرجى اختيار المقاس</span>
                                    }
                                    else
                                    {
                                        @item.SelectedSize
                                    }
                                </strong>
                            </div>
                            <div>
                                <label class="checkout-label">Color <span class="required">*</span></label>
                                <strong class="selected-color-text-@item.Id">
                                    @if (string.IsNullOrWhiteSpace(item.SelectedColor))
                                    {
                                        <span class="text-danger ms-2">يرجى اختيار اللون</span>
                                    }
                                    else
                                    {
                                        @item.SelectedColor
                                    }
                                </strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 text-end">
                        <div class="d-flex align-items-center justify-content-end mb-2">
                            <a class="btn btn-outline-primary btn-sm btn-qty" asp-action="Minus" asp-route-cartid="@item.Id">-</a>
                            <span class="mx-2">@item.Count</span>
                            <a class="btn btn-outline-primary btn-sm btn-qty" asp-action="Plus" asp-route-cartid="@item.Id">+</a>
                        </div>
                        <div class="price mb-2">$@item.product.Price</div>
                        <a asp-action="Remove" asp-route-cartid="@item.Id" class="btn btn-sm btn-danger">Remove</a>
                    </div>
                </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="summary shadow-sm">
                    <h3>Order Summary</h3>
                    <div class="summary-item"><span>Subtotal</span><span>$360</span></div>
                    <div class="summary-item"><span>Discount</span><span>$0</span></div>
                    <div class="summary-item"><span>Shipping</span><span>$0</span></div>
                    <hr />
                    <div class="summary-item"><strong>Total</strong><strong>$@Model.TotalCarts</strong></div>
                    <a asp-action="Summary" class="btn btn-success w-100 mt-3">Proceed to Checkout</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
