    @Html.AntiForgeryToken()
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            direction: ltr;
        }

        .cart-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
