@model DAJDAJ.Entities.ViewModels.ProductVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="productForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product.Id" />

            <div class="form-group">
                <label asp-for="product.Name" class="control-label">Product Name</label>
                <input asp-for="product.Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Price" class="control-label">Price</label>
                <input asp-for="product.Price" class="form-control" placeholder="0.00" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Img" class="control-label">Main Image</label>
                <input asp-for="Img" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Img" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model?.product?.Img))
                {
                    <div class="mt-3 p-2 border rounded">
                        <strong class="text-primary">Current Main Image:</strong><br>
                        <img src="~/@Model.product.Img" class="img-thumbnail mt-2" style="max-width: 150px; max-height: 150px; border: 2px solid #28a745;" alt="Current main image" />
                        <br><small class="text-info"><i class="fas fa-info-circle"></i> Leave empty to keep this image</small>
                    </div>
                }
                else
                {
                    <small class="text-warning"><i class="fas fa-exclamation-triangle"></i> No main image currently set</small>
                }
            </div>

            <!-- Images with Colors Section -->
            <div class="form-group">
                <label class="control-label"><i class="fas fa-images"></i> Images with Colors</label>

                @if (Model?.product?.ProductImages != null && Model.product.ProductImages.Any())
                {
                    <div class="mb-4 p-3 border rounded bg-light">
                        <strong class="text-primary"><i class="fas fa-palette"></i> Current Images with Colors:</strong>
                        <div class="row mt-2">
                            @foreach (var img in Model.product.ProductImages)
                            {
                                <div class="col-md-3 col-sm-4 mb-3">
                                    <div class="card border-primary">
                                        <img src="~/@img.ImagePath" class="card-img-top" style="height: 120px; object-fit: cover;"
                                             onerror="this.src='/images/placeholder.jpg';"
                                             alt="Product Image" />
                                        <div class="card-body p-2 text-center bg-primary text-white">
                                            <small><i class="fas fa-tag"></i> @(string.IsNullOrEmpty(img.Color) ? "No color specified" : img.Color)</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> No additional images currently set for this product.
                    </div>
                }

                <div class="border p-3 rounded">
                    <strong class="text-success"><i class="fas fa-edit"></i> Edit Images with Colors:</strong>
                    <div id="imageColorContainer" class="mt-2">
                        @if (Model?.product?.ProductImages != null && Model.product.ProductImages.Any())
                        {
                            @for (int i = 0; i < Model.product.ProductImages.Count; i++)
                            {
                                var img = Model.product.ProductImages.ElementAt(i);
                                <div class="image-color-row row mb-3 p-2 border rounded">
                                    <input type="hidden" name="ExistingImagePaths[@i]" value="@img.ImagePath" />
                                    <input type="hidden" name="ExistingImageIds[@i]" value="@img.Id" />

                                    <div class="col-md-5">
                                        <label>Image <small class="text-muted">(leave empty to keep current)</small></label>
                                        <input name="Images[@i]" type="file" class="form-control image-input" accept="image/*" />
                                        <small class="text-muted">Current: @System.IO.Path.GetFileName(img.ImagePath)</small>
                                    </div>

                                    <div class="col-md-5">
                                        <label>Color</label>
                                        <select name="ImageColors[@i]" class="form-control color-select">
                                            <option value="">Select Color</option>
                                            @if (Model?.AvailableColors != null)
                                            {
                                                foreach (var color in Model.AvailableColors)
                                                {
                                                    var isSelected = string.Equals(color.Value, img.Color, StringComparison.OrdinalIgnoreCase) ||
                                                    string.Equals(color.Text, img.Color, StringComparison.OrdinalIgnoreCase);

                                                    if (isSelected)
                                                    {
                                                        <option value="@color.Value" selected>@color.Text</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@color.Value">@color.Text</option>
                                                    }
                                                }
                                            }
                                        </select>
                                        <small class="text-muted">Current: @img.Color</small>
                                    </div>

                                    <div class="col-md-2 d-flex align-items-end">
                                        <button type="button" class="btn btn-danger btn-sm remove-image-row">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        }

                        <!-- Always show at least one row for adding new images -->
                        <div class="image-color-row row mb-3 p-2 border rounded" style="background-color: #f8f9fa;">
                            @{
                                int newImageIndex = Model?.product?.ProductImages?.Count ?? 0;
                            }
                            <input type="hidden" name="ExistingImagePaths[@newImageIndex]" value="" />
                            <input type="hidden" name="ExistingImageIds[@newImageIndex]" value="0" />

                            <div class="col-md-5">
                                <label><strong>Add New Image</strong></label>
                                <input name="Images[@newImageIndex]" type="file" class="form-control image-input" accept="image/*" />
                                <small class="text-success">Select an image file to upload</small>
                            </div>

                            <div class="col-md-5">
                                <label><strong>Color for New Image</strong></label>
                                <select name="ImageColors[@newImageIndex]" class="form-control color-select">
                                    <option value="">Select Color</option>
                                    @if (Model?.AvailableColors != null)
                                    {
                                        foreach (var color in Model.AvailableColors)
                                        {
                                            <option value="@color.Value">@color.Text</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="col-md-2 d-flex align-items-end">
                                <button type="button" class="btn btn-success btn-sm" onclick="previewNewImage(this)" title="Preview Image">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <button type="button" id="addImageRow" class="btn btn-success btn-sm mt-2">
                        <i class="fas fa-plus"></i> Add Another Image Row
                    </button>
                    <small class="text-muted d-block mt-1">
                        <i class="fas fa-info-circle"></i> Upload new images with colors. Each image will be associated with the selected color.
                    </small>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="product.CategoryId" class="control-label">Category</label>
                <select asp-for="product.CategoryId" asp-items="Model.categorylist" class="form-control">
                    <option disabled>-- Select Category --</option>
                </select>
                <span asp-validation-for="product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Color" class="control-label">Available Colors (comma separated)</label>
                <input asp-for="product.Color" class="form-control" placeholder="Example: Black,White,Red" />
                <span asp-validation-for="product.Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Size" class="control-label">Available Sizes (comma separated)</label>
                <input asp-for="product.Size" class="form-control" placeholder="Example: S,M,L,XL" id="sizeInput" />
                <span asp-validation-for="product.Size" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="product.IsOneSize" class="form-check-input" id="isOneSizeCheck" />
                <label asp-for="product.IsOneSize" class="form-check-label" for="isOneSizeCheck">One Size Only</label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Update Product" class="btn btn-primary" id="saveBtn" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <!-- Preview Section -->
    <div class="col-md-4">
        <div class="card sticky-top">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-eye"></i> Product Preview</h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model?.product?.Img))
                {
                    <img id="productPreview" src="~/@Model.product.Img"
                         class="img-fluid rounded border shadow-sm"
                         style="max-width: 100%; height: auto; min-height: 200px;"
                         alt="Product preview"
                         onerror="this.src='/images/placeholder.jpg'" />
                }
                else
                {
                    <img id="productPreview" src="/images/placeholder.jpg"
                         class="img-fluid rounded border shadow-sm"
                         style="max-width: 100%; height: auto; min-height: 200px;"
                         alt="Product preview" />
                }

                <div class="mt-3">
                    <h5 class="product-name-preview text-primary">@(Model?.product?.Name ?? "Product Name")</h5>
                    <h4 class="text-success product-price-preview">
                        $@(Model?.product?.Price.ToString("0.00") ?? "0.00")
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Edit Product page loaded');
            let imageRowCount = @(Model?.product?.ProductImages?.Count ?? 0) + 1; // +1 for the new image row

            // Elements
            const isOneSizeCheck = document.getElementById('isOneSizeCheck');
            const sizeInput = document.getElementById('sizeInput');
            const addImageRowBtn = document.getElementById('addImageRow');
            const productForm = document.getElementById('productForm');
            const saveBtn = document.getElementById('saveBtn');
            const productPreview = document.getElementById('productPreview');
            const productNamePreview = document.querySelector('.product-name-preview');
            const productPricePreview = document.querySelector('.product-price-preview');

            // Main image preview
            const imgInput = document.querySelector('input[name="Img"]');
            if (imgInput) {
                imgInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            productPreview.src = e.target.result;
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            // Product name live preview
            const nameInput = document.querySelector('input[name="product.Name"]');
            if (nameInput) {
                nameInput.addEventListener('input', function(e) {
                    productNamePreview.textContent = e.target.value || '@Model?.product?.Name';
                });
            }

            // Product price live preview
            const priceInput = document.querySelector('input[name="product.Price"]');
            if (priceInput) {
                priceInput.addEventListener('input', function(e) {
                    const price = parseFloat(e.target.value) || @Model?.product?.Price;
                    productPricePreview.textContent = '$' + price.toFixed(2);
                });
            }

            // One size checkbox handling
            if (isOneSizeCheck && sizeInput) {
                isOneSizeCheck.addEventListener('change', function() {
                    if (this.checked) {
                        sizeInput.value = 'One Size';
                        sizeInput.disabled = true;
                    } else {
                        sizeInput.disabled = false;
                        if (sizeInput.value === 'One Size') {
                            sizeInput.value = '';
                        }
                    }
                });

                // Initialize one size checkbox state
                if (isOneSizeCheck.checked) {
                    sizeInput.disabled = true;
                }
            }

            // Add new row for images and colors
            if (addImageRowBtn) {
                addImageRowBtn.addEventListener('click', function() {
                    console.log('Adding new image row');
                    const container = document.getElementById('imageColorContainer');
                    if (container) {
                        // Create a new row similar to the "Add New Image" row
                        const newRow = document.createElement('div');
                        newRow.className = 'image-color-row row mb-3 p-2 border rounded';
                        newRow.style.backgroundColor = '#f8f9fa';
                        
                        newRow.innerHTML = `
                            <input type="hidden" name="ExistingImagePaths[${imageRowCount}]" value="" />
                            <input type="hidden" name="ExistingImageIds[${imageRowCount}]" value="0" />

                            <div class="col-md-5">
                                <label><strong>Add New Image</strong></label>
                                <input name="Images[${imageRowCount}]" type="file" class="form-control image-input" accept="image/*" />
                                <small class="text-success">Select an image file to upload</small>
                            </div>

                            <div class="col-md-5">
                                <label><strong>Color for New Image</strong></label>
                                <select name="ImageColors[${imageRowCount}]" class="form-control color-select">
                                    <option value="">Select Color</option>
                                    @if (Model?.AvailableColors != null)
                                    {
                                        foreach (var color in Model.AvailableColors)
                                        {
                                            <option value="@color.Value">@color.Text</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="col-md-2 d-flex align-items-end">
                                <button type="button" class="btn btn-danger btn-sm remove-image-row" title="Remove Row">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        `;

                        container.appendChild(newRow);
                        imageRowCount++;
                        updateRemoveButtons();
                        
                        // Add preview functionality to new row
                        const newFileInput = newRow.querySelector('.image-input');
                        if (newFileInput) {
                            newFileInput.addEventListener('change', function(e) {
                                previewImageInRow(this, newRow);
                            });
                        }
                    }
                });
            }

            // Delete row
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-image-row') || e.target.closest('.remove-image-row')) {
                    const button = e.target.closest('.remove-image-row');
                    const row = button.closest('.image-color-row');
                    const existingPath = row.querySelector('input[name*="ExistingImagePaths"]').value;

                    if (existingPath) {
                        if (!confirm('Are you sure you want to remove this existing image?')) {
                            return;
                        }
                    }

                    row.remove();
                    updateRemoveButtons();
                }
            });

            function updateRemoveButtons() {
                const rows = document.querySelectorAll('.image-color-row');
                rows.forEach((row, index) => {
                    const removeBtn = row.querySelector('.remove-image-row');
                    if (removeBtn) {
                        // Show remove button for all rows except the first "Add New Image" row
                        const isNewImageRow = !row.querySelector('input[name*="ExistingImagePaths"]').value;
                        const isFirstNewRow = isNewImageRow && index === (rows.length - 1);
                        removeBtn.style.display = isFirstNewRow ? 'none' : 'block';
                    }
                });
            }

            // Image preview functionality
            function previewImageInRow(input, row) {
                if (input.files && input.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        // Remove existing preview if any
                        const existingPreview = row.querySelector('.image-preview');
                        if (existingPreview) {
                            existingPreview.remove();
                        }

                        // Create new preview
                        const preview = document.createElement('div');
                        preview.className = 'image-preview mt-2';
                        preview.innerHTML = `
                            <img src="${e.target.result}" style="max-width: 100px; max-height: 100px; object-fit: cover; border-radius: 4px; border: 1px solid #ddd;" />
                            <small class="d-block text-success">Preview</small>
                        `;
                        
                        input.parentNode.appendChild(preview);
                    };
                    reader.readAsDataURL(input.files[0]);
                }
            }

            // Add preview functionality to all existing file inputs
            document.querySelectorAll('.image-input').forEach(input => {
                input.addEventListener('change', function(e) {
                    const row = this.closest('.image-color-row');
                    previewImageInRow(this, row);
                });
            });

            // Form validation and submission
            if (productForm && saveBtn) {
                productForm.addEventListener('submit', function(e) {
                    console.log('Form submitted');

                    // Debug: Log form data
                    const formData = new FormData(productForm);
                    console.log('Form Data:');
                    for (let [key, value] of formData.entries()) {
                        if (key.includes('Image') || key.includes('Color')) {
                            console.log(`${key}: ${value instanceof File ? value.name : value}`);
                        }
                    }

                    // Basic validation
                    if (!nameInput || !nameInput.value.trim()) {
                        e.preventDefault();
                        alert('Product name is required');
                        if (nameInput) nameInput.focus();
                        return false;
                    }

                    if (!priceInput || !priceInput.value || parseFloat(priceInput.value) <= 0) {
                        e.preventDefault();
                        alert('Product price must be greater than 0');
                        if (priceInput) priceInput.focus();
                        return false;
                    }

                    // Show loading state
                    saveBtn.disabled = true;
                    saveBtn.value = 'Updating...';

                    return true;
                });
            }

            // Initialize remove buttons
            updateRemoveButtons();
        });

        // Global function for preview button
        function previewNewImage(button) {
            const row = button.closest('.image-color-row');
            const fileInput = row.querySelector('.image-input');
            if (fileInput.files && fileInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    // Show in a modal or alert
                    const modal = document.createElement('div');
                    modal.style.cssText = 'position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 9999; display: flex; align-items: center; justify-content: center;';
                    modal.innerHTML = `
                        <div style="background: white; padding: 20px; border-radius: 8px; max-width: 90%; max-height: 90%; overflow: auto;">
                            <h4>Image Preview</h4>
                            <img src="${e.target.result}" style="max-width: 100%; height: auto;" />
                            <br><br>
                            <button onclick="this.closest('div').parentNode.remove()" class="btn btn-secondary">Close</button>
                        </div>
                    `;
                    document.body.appendChild(modal);
                    
                    modal.addEventListener('click', function(e) {
                        if (e.target === modal) {
                            modal.remove();
                        }
                    });
                };
                reader.readAsDataURL(fileInput.files[0]);
            } else {
                alert('Please select an image first');
            }
        }
    </script>
}