}

@if (TempData["Errors"] != null)
{
    <div class="alert alert-danger">@TempData["Errors"]</div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post" enctype="multipart/form-data" id="productForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="product.Name" class="control-label"></label>
                <input asp-for="product.Name" class="form-control" />
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Price" class="control-label"></label>
                <input asp-for="product.Price" class="form-control" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Img" class="control-label">الصورة الرئيسية</label>
                <input asp-for="Img" type="file" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>

            <!-- قسم الصور مع الألوان -->
            <div class="form-group">
                <label class="control-label">الصور مع الألوان</label>
                <div id="imageColorContainer">
                    <div class="image-color-row row mb-3">
                        <div class="col-md-6">
                            <label>الصورة</label>
                            <input name="Images" type="file" class="form-control image-input" />
                        </div>
                        <div class="col-md-4">
                            <label>اللون</label>
                            <select name="ImageColors" class="form-control color-select">
                                <option value="">اختر اللون</option>
                                @foreach (var color in Model.AvailableColors)
                                {
                                    <option value="@color.Value">@color.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="btn btn-danger remove-image-row" style="display:none;">حذف</button>
                        </div>
                    </div>
                </div>
                <button type="button" id="addImageRow" class="btn btn-success btn-sm">إضافة صورة أخرى</button>
            </div>

            <div class="form-group">
                <label asp-for="product.CategoryId" class="control-label"></label>
                <select asp-for="product.CategoryId" asp-items="Model.categorylist" class="form-control">
