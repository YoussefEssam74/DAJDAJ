@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let imageRowCount = 1;
            
            // إضافة صف جديد للصور والألوان
            document.getElementById('addImageRow').addEventListener('click', function() {
                const container = document.getElementById('imageColorContainer');
                const newRow = container.querySelector('.image-color-row').cloneNode(true);
                
                // مسح القيم
                newRow.querySelector('.image-input').value = '';
                newRow.querySelector('.color-select').value = '';
                
                // إظهار زر الحذف
                newRow.querySelector('.remove-image-row').style.display = 'block';
                
                container.appendChild(newRow);
                imageRowCount++;
                updateRemoveButtons();
            });
            
            // حذف صف
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-image-row')) {
                    e.target.closest('.image-color-row').remove();
                    imageRowCount--;
                    updateRemoveButtons();
                }
            });
            
            function updateRemoveButtons() {
                const rows = document.querySelectorAll('.image-color-row');
                rows.forEach((row, index) => {
                    const removeBtn = row.querySelector('.remove-image-row');
                    if (rows.length > 1) {
                        removeBtn.style.display = 'block';
                    } else {
                        removeBtn.style.display = 'none';
                    }
                });
            }
        });
    </script>
}