    <!-- قسم المعاينة -->
    <div class="col-md-4">
        <div class="card sticky-top">
            <div class="card-header">
                <h3 class="card-title">معاينة المنتج</h3>
            </div>
            <div class="card-body text-center">
                <img id="productPreview" src="~/@Model.product.Img" 
                     class="img-fluid rounded border shadow-sm" 
                     style="max-width: 100%; height: auto; min-height: 200px;" 
                     alt="معاينة المنتج" />
                
                <div class="mt-3">
                    <h5 class="product-name-preview">@Model.product.Name</h5>
                    <h4 class="text-success product-price-preview">
