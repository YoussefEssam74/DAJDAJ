                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="product.Color" class="control-label">الألوان المتاحة</label>
                                <input asp-for="product.Color" class="form-control" placeholder="مثال: أسود,أبيض,أحمر" />
                                <small class="form-text text-muted">افصل الألوان بفاصلة</small>
                                <span asp-validation-for="product.Color" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="product.Size" class="control-label">الأحجام المتاحة</label>
                                <input asp-for="product.Size" class="form-control" placeholder="مثال: S,M,L,XL" 
                                       id="sizeInput" />
                                <small class="form-text text-muted">افصل الأحجام بفاصلة</small>
                                <span asp-validation-for="product.Size" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
