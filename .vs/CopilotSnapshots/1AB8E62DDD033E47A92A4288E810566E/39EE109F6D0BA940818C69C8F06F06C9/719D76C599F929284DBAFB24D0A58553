                                    <input asp-for="product.Price" class="form-control" placeholder="0.00" />
                                    <div class="input-group-append">
                                        <span class="input-group-text">ريال</span>
                                    </div>
                                </div>
                                <span asp-validation-for="product.Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="product.CategoryId" class="control-label">الفئة</label>
                        <select asp-for="product.CategoryId" asp-items="Model.categorylist" class="form-control select2">
                            <option disabled selected>-- اختر الفئة --</option>
                        </select>
                        <span asp-validation-for="product.CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- إدارة الصور -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">إدارة الصور</h3>
                </div>
                <div class="card-body">
                    <!-- الصورة الرئيسية -->
                    <div class="form-group">
                        <label asp-for="Img" class="control-label">الصورة الرئيسية</label>
                        <div class="custom-file">
                            <input asp-for="Img" type="file" class="custom-file-input" id="mainImageInput" accept="image/*" />
                            <label class="custom-file-label" for="mainImageInput">اختر الصورة الرئيسية</label>
                        </div>
                        <span asp-validation-for="Img" class="text-danger"></span>
                        
                        <!-- معاينة الصورة الرئيسية -->
                        <div class="mt-3">
                            <img id="mainImagePreview" src="~/@Model.product.Img" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" alt="معاينة الصورة الرئيسية" />
                        </div>
                    </div>

                    <!-- عرض الصور الحالية مع الألوان -->
                    @if (Model.product.ProductImages != null && Model.product.ProductImages.Any())
                    {
                        <div class="form-group">
                            <label class="control-label">الصور الحالية مع الألوان</label>
                            <div class="row" id="currentImagesContainer">
                                @foreach (var img in Model.product.ProductImages)
                                {
                                    <div class="col-md-4 col-sm-6 mb-3">
                                        <div class="card border">
                                            <img src="~/@img.ImagePath" class="card-img-top" style="height: 150px; object-fit: cover;" />
                                            <div class="card-body p-2 text-center">
                                                <small class="text-muted d-block">
                                                    <i class="fas fa-palette mr-1"></i>
                                                    اللون: @(string.IsNullOrEmpty(img.Color) ? "غير محدد" : img.Color)
                                                </small>
                                                <button type="button" class="btn btn-danger btn-sm mt-2 delete-existing-image" 
                                                        data-image-id="@img.Id" data-image-path="@img.ImagePath">
                                                    <i class="fas fa-trash mr-1"></i>حذف
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- قسم الصور الجديدة مع الألوان -->
                    <div class="form-group">
                        <label class="control-label">إضافة صور جديدة مع الألوان</label>
                        <div id="imageColorContainer">
                            <div class="image-color-row card border mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <label>الصورة</label>
                                            <div class="custom-file">
                                                <input name="Images" type="file" class="custom-file-input image-input" accept="image/*" />
                                                <label class="custom-file-label">اختر صورة</label>
                                            </div>
                                            <div class="image-preview mt-2" style="display: none;">
                                                <img class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <label>اللون</label>
                                            <select name="ImageColors" class="form-control color-select">
                                                <option value="">اختر اللون</option>
                                                @foreach (var color in Model.AvailableColors)
                                                {
                                                    <option value="@color.Value">@color.Text</option>
                                                }
                                            </select>
                                            <div class="color-preview mt-2" style="display: none;">
                                                <div class="color-box" style="width: 30px; height: 30px; border: 1px solid #ccc; border-radius: 50%;"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-2 d-flex align-items-end">
                                            <button type="button" class="btn btn-danger remove-image-row" style="display:none;">
                                                <i class="fas fa-trash mr-1"></i>حذف
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" id="addImageRow" class="btn btn-success btn-sm">
                            <i class="fas fa-plus mr-1"></i>إضافة صورة أخرى
                        </button>
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle mr-1"></i>
                            ملاحظة: إضافة صور جديدة سيستبدل جميع الصور الحالية
                        </small>
                    </div>
                </div>
            </div>

            <!-- خصائص المنتج -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">خصائص المنتج</h3>
                </div>
