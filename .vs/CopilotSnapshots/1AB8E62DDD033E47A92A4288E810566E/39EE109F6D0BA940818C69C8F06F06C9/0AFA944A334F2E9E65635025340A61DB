@model DAJDAJ.Entities.ViewModels.ProductVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-md-7">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="productForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product.Id" />

            <div class="form-group">
                <label asp-for="product.Name" class="control-label"></label>
                <input asp-for="product.Name" class="form-control" />
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Price" class="control-label"></label>
                <input asp-for="product.Price" class="form-control" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Img" class="control-label">الصورة الرئيسية</label>
                <input asp-for="Img" type="file" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>

            <!-- عرض الصور الحالية مع الألوان -->
            @if (Model.product.ProductImages != null && Model.product.ProductImages.Any())
            {
                <div class="form-group">
                    <label class="control-label">الصور الحالية مع الألوان</label>
                    <div class="row">
                        @foreach (var img in Model.product.ProductImages)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="card">
                                    <img src="~/@img.ImagePath" class="card-img-top" style="height: 150px; object-fit: cover;" />
                                    <div class="card-body p-2">
                                        <small class="text-muted">اللون: @(string.IsNullOrEmpty(img.Color) ? "غير محدد" : img.Color)</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- قسم الصور الجديدة مع الألوان -->
            <div class="form-group">
                <label class="control-label">إضافة صور جديدة مع الألوان</label>
                <div id="imageColorContainer">
                    <div class="image-color-row row mb-3">
                        <div class="col-md-6">
                            <label>الصورة</label>
                            <input name="Images" type="file" class="form-control image-input" />
                        </div>
                        <div class="col-md-4">
                            <label>اللون</label>
                            <select name="ImageColors" class="form-control color-select">
                                <option value="">اختر اللون</option>
                                @foreach (var color in Model.AvailableColors)
                                {
                                    <option value="@color.Value">@color.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="btn btn-danger remove-image-row" style="display:none;">حذف</button>
                        </div>
                    </div>
                </div>
                <button type="button" id="addImageRow" class="btn btn-success btn-sm">إضافة صورة أخرى</button>
                <small class="form-text text-muted">ملاحظة: إضافة صور جديدة سيستبدل جميع الصور الحالية</small>
            </div>

            <div class="form-group">
                <label asp-for="product.CategoryId" class="control-label"></label>
                <select asp-for="product.CategoryId" asp-items="Model.categorylist" class="form-control">
                    <option disabled selected>-- Select Category --</option>
                </select>
                <span asp-validation-for="product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Color" class="control-label">الألوان المتاحة (مفصولة بفاصلة)</label>
                <input asp-for="product.Color" class="form-control" placeholder="مثال: أسود,أبيض,أحمر" />
                <span asp-validation-for="product.Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Size" class="control-label">الأحجام المتاحة (مفصولة بفاصلة)</label>
                <input asp-for="product.Size" class="form-control" placeholder="مثال: S,M,L,XL" />
                <span asp-validation-for="product.Size" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="product.IsOneSize" class="form-check-input" />
                <label asp-for="product.IsOneSize" class="form-check-label"></label>
