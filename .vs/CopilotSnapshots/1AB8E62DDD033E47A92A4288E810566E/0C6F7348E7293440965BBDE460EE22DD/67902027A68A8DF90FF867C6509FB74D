@model Shoppingcart
@{
    ViewData["Title"] = "Product Details";
    var productImages = Model.ProductImages ?? new List<string>();
    var imageColorMap = ViewBag.ImageColorMap as Dictionary<string, string> ?? new Dictionary<string, string>();

    var colorMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
    {
        { "burgendy", "#800020" },
        { "burgundy", "#800020" },
        { "red", "red" },
        { "white", "white" },
        { "black", "black" },
        { "blue", "blue" },
        { "green", "green" },
        { "yellow", "yellow" },
        { "pink", "pink" },
        { "brown", "brown" },
        { "gray", "gray" },
        { "purple", "purple" },
        { "orange", "orange" }
    };
}

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="ProductId" value="@Model.product.Id" />
    <input type="hidden" name="SelectedColor" id="SelectedColor" value="" />
    <input type="hidden" name="SelectedSize" id="SelectedSize" value="" />
    <input type="hidden" name="Count" id="Count" value="@Model.Count" />

    <div class="container py-5">
        <div class="row">
            <div class="col-md-6">
                <!-- Image Carousel -->
                <div class="position-relative text-center d-inline-block" style="width: 100%; max-width: 500px; height: 500px; overflow: hidden; border-radius: 12px;">
                    <img id="carouselImage" src="@productImages.FirstOrDefault()" alt="Product Image"
                         class="img-fluid rounded border zoomable"
                         style="width: 100%; height: 100%; object-fit: cover; object-position: center; transition: transform 0.3s ease;" />

                    @if (productImages.Count > 1)
                    {
                        <button onclick="prevImage()" type="button" class="btn btn-dark position-absolute"
                                style="top: 50%; left: 10px; transform: translateY(-50%); z-index: 10; opacity: 0.7;">
                            ⟨
                        </button>
                        <button onclick="nextImage()" type="button" class="btn btn-dark position-absolute"
                                style="top: 50%; right: 10px; transform: translateY(-50%); z-index: 10; opacity: 0.7;">
                            ⟩
                        </button>
                    }
                </div>
            </div>

            <div class="col-md-6">
                <h2>@Model.product.Name</h2>
                <h4 class="text-muted">@Model.product.Price.ToString("0.00") EGP</h4>

                @if (Model.Sizes != null && Model.Sizes.Any())
                {
                    <div class="mb-3">
                        <label class="fw-bold">Size:</label>
                        <div class="d-flex gap-2 mt-1" id="size-options">
                            @foreach (var size in Model.Sizes)
                            {
                                var isSoldOut = size.ToLower().Contains("soldout");
                                var displaySize = size.Replace("soldout", "", StringComparison.OrdinalIgnoreCase).Trim();

                                <button type="button" class="btn rounded-pill px-3 py-1 size-btn @(isSoldOut ? "btn-secondary disabled" : "btn-outline-dark")"
                                        data-size="@displaySize" @(isSoldOut ? "disabled" : "")>
                                    @displaySize
                                </button>
                            }
                        </div>
                    </div>
                }
                else if (Model.product.IsOneSize)
                {
                    <div class="mb-3">
                        <label class="fw-bold">Size:</label>
                        <div class="d-flex gap-2 mt-1">
                            <button type="button" class="btn rounded-pill px-3 py-1 btn-dark size-btn selected"
                                    data-size="One Size">
                                مقاس واحد
                            </button>
                        </div>
                    </div>
                }

                @if (Model.Colors != null && Model.Colors.Any())
                {
                    <div class="mb-3">
                        <label class="fw-bold">Color:</label>
                        <div class="d-flex gap-2 mt-1 flex-wrap" id="color-options">
                            @foreach (var color in Model.Colors)
                            {
                                var isSoldOut = color.ToLower().Contains("soldout");
                                var displayColor = color.Replace("soldout", "", StringComparison.OrdinalIgnoreCase).Trim();
                                var hasImage = imageColorMap.ContainsKey(displayColor);

                                @if (hasImage)
                                {
                                    <div class="color-image-option position-relative" data-color="@displayColor" data-image="@imageColorMap[displayColor]"
                                         style="cursor: pointer; width: 60px; height: 60px; border-radius: 8px; overflow: hidden; border: 2px solid #ddd; transition: all 0.3s ease;"
                                         title="@displayColor" @(isSoldOut ? "data-soldout='true'" : "")>
                                        <img src="@imageColorMap[displayColor]" alt="@displayColor" style="width: 100%; height: 100%; object-fit: cover;" />
                                        <div class="color-name-overlay" style="position: absolute; bottom: 0; left: 0; right: 0; background: rgba(0,0,0,0.7); color: white; font-size: 10px; text-align: center; padding: 2px;">
                                            @displayColor
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    string colorCode = colorMap.ContainsKey(displayColor.ToLower()) ? colorMap[displayColor.ToLower()] : displayColor;
                                    <div class="color-circle border @(isSoldOut ? "border-light opacity-50" : "")"
                                         data-color="@displayColor" title="@displayColor"
                                         style="width: 30px; height: 30px; background-color:@colorCode; border-radius: 50%; cursor: pointer;"
                                         @(isSoldOut ? "data-soldout='true'" : "")>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }

                <div class="mb-3">
                    <label class="fw-bold">Quantity:</label>
                    <div class="input-group w-25">
                        <button type="button" class="btn btn-outline-secondary" onclick="updateCount(-1)">-</button>
                        <input type="text" id="countInput" class="form-control text-center" value="@Model.Count" readonly />
                        <button type="button" class="btn btn-outline-secondary" onclick="updateCount(1)">+</button>
                    </div>
                </div>

                <div class="d-flex flex-column gap-2">
                    <button class="btn text-white" style="background-color: #f06292;" type="submit">
                        <i class="bi bi-cart-fill me-1"></i> Add to cart
                    </button>
                    <button class="btn btn-dark text-white" type="button">Buy it now</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        const images = @Html.Raw(Json.Serialize(productImages));
        const imageColorMap = @Html.Raw(Json.Serialize(imageColorMap));
        let currentIndex = 0;
        let selectedColor = '';
        let selectedSize = '';

        function showImage(index) {
            const img = document.getElementById("carouselImage");
            if (img && images.length > 0) {
                img.src = images[index];
            }
        }

        function prevImage() {
            currentIndex = (currentIndex - 1 + images.length) % images.length;
            showImage(currentIndex);
        }

        function nextImage() {
            currentIndex = (currentIndex + 1) % images.length;
            showImage(currentIndex);
        }

        // Zoom effect on hover
        document.getElementById("carouselImage").addEventListener('mouseover', function () {
            this.style.transform = "scale(1.2)";
        });
        document.getElementById("carouselImage").addEventListener('mouseout', function () {
            this.style.transform = "scale(1)";
        });

        function updateCount(change) {
            const countInput = document.getElementById("countInput");
            const hiddenCount = document.getElementById("Count");
            let current = parseInt(countInput.value);
            let updated = current + change;
            if (updated >= 1 && updated <= 100) {
                countInput.value = updated;
                hiddenCount.value = updated;
            }
        }

        // معالجة اختيار الألوان بالصور
        document.querySelectorAll('.color-image-option').forEach(option => {
            option.addEventListener('click', function () {
                if (this.dataset.soldout === 'true') return;
                
                // إزالة التحديد السابق
                document.querySelectorAll('.color-image-option').forEach(c => {
                    c.style.border = '2px solid #ddd';
                });
                document.querySelectorAll('.color-circle').forEach(c => {
                    c.classList.remove('border-dark', 'border-3');
                    c.classList.add('border');
                });
                
                // تحديد الصورة الجديدة
                this.style.border = '2px solid #007bff';
                
                selectedColor = this.getAttribute('data-color');
                document.getElementById('SelectedColor').value = selectedColor;
                
                // تغيير الصورة الرئيسية
                const imageUrl = this.getAttribute('data-image');
                if (imageUrl) {
                    document.getElementById("carouselImage").src = imageUrl;
                }
            });
        });

        // معالجة اختيار الألوان بالدوائر
        document.querySelectorAll('.color-circle').forEach(circle => {
            circle.addEventListener('click', function () {
                if (this.dataset.soldout === 'true') return;
                
                // إزالة التحديد السابق
                document.querySelectorAll('.color-circle').forEach(c => {
                    c.classList.remove('border-dark', 'border-3');
                    c.classList.add('border');
                });
                document.querySelectorAll('.color-image-option').forEach(c => {
                    c.style.border = '2px solid #ddd';
                });
                
                this.classList.add('border-dark', 'border-3');
                selectedColor = this.getAttribute('data-color');
                document.getElementById('SelectedColor').value = selectedColor;
            });
        });

        // معالجة اختيار الأحجام
        document.querySelectorAll('.size-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                if (this.classList.contains('disabled')) return;
                
                document.querySelectorAll('.size-btn').forEach(b => {
                    b.classList.remove('btn-dark', 'selected');
                    b.classList.add('btn-outline-dark');
                });
                this.classList.remove('btn-outline-dark');
                this.classList.add('btn-dark', 'selected');
                
                selectedSize = this.getAttribute('data-size');
                document.getElementById('SelectedSize').value = selectedSize;
            });
        });

        // تحديد المقاس الواحد تلقائياً
        const oneSizeBtn = document.querySelector('.size-btn[data-size="One Size"]');
        if (oneSizeBtn) {
            selectedSize = 'One Size';
            document.getElementById('SelectedSize').value = selectedSize;
        }

        // التحقق من البيانات المطلوبة عند الإرسال
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!selectedColor && document.querySelectorAll('.color-circle, .color-image-option').length > 0) {
                e.preventDefault();
                alert('الرجاء اختيار لون');
                return;
            }
            if (!selectedSize && document.querySelectorAll('.size-btn').length > 0) {
                e.preventDefault();
                alert('الرجاء اختيار حجم');
                return;
            }
        });
    </script>
}
