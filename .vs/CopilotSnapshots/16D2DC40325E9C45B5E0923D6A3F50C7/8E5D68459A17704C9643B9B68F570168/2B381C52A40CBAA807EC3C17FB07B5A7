@model DAJDAJ.Entities.ViewModels.ProductVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="productForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="product.Id" />

            <div class="form-group">
                <label asp-for="product.Name" class="control-label">Product Name</label>
                <input asp-for="product.Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Price" class="control-label">Price</label>
                <input asp-for="product.Price" class="form-control" placeholder="0.00" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Img" class="control-label">Main Image</label>
                <input asp-for="Img" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Img" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model?.product?.Img))
                {
                    <div class="mt-3 p-2 border rounded">
                        <strong class="text-primary">Current Main Image:</strong><br>
                        <img src="~/@Model.product.Img" class="img-thumbnail mt-2" style="max-width: 150px; max-height: 150px; border: 2px solid #28a745;" alt="Current main image" />
                        <br><small class="text-info"><i class="fas fa-info-circle"></i> Leave empty to keep this image</small>
                    </div>
                }
                else
                {
                    <small class="text-warning"><i class="fas fa-exclamation-triangle"></i> No main image currently set</small>
                }
            </div>

            <!-- Images with Colors Section -->
            <div class="form-group">
                <label class="control-label"><i class="fas fa-images"></i> Images with Colors</label>
                
                <!-- Temporary Debug Section - Remove after fixing -->
                <div class="alert alert-info">
                    <strong>DEBUG INFO:</strong><br>
                    Product Images Count: @(Model?.product?.ProductImages?.Count ?? 0)<br>
                    @if (Model?.product?.ProductImages != null)
                    {
                        @for (int i = 0; i < Model.product.ProductImages.Count; i++)
                        {
                            var img = Model.product.ProductImages.ElementAt(i);
                            <span style="font-size: 12px;">Image @(i+1): Color='@img.Color', Path='@img.ImagePath'</span><br>
                        }
                    }
                </div>
                
                <!-- Display Current Images -->
                @if (Model?.product?.ProductImages != null && Model.product.ProductImages.Any())
                {
                    <div class="mb-4 p-3 border rounded bg-light">
                        <strong class="text-primary"><i class="fas fa-palette"></i> Current Images with Colors:</strong>
                        <div class="row mt-2">
                            @foreach (var img in Model.product.ProductImages)
                            {
                                <div class="col-md-3 col-sm-4 mb-3">
                                    <div class="card border-primary">
                                        <img src="~/@img.ImagePath" class="card-img-top" style="height: 120px; object-fit: cover;" 
                                             onerror="this.src='/images/placeholder.jpg';" 
                                             alt="Product Image" />
                                        <div class="card-body p-2 text-center bg-primary text-white">
                                            <small><i class="fas fa-tag"></i> @(string.IsNullOrEmpty(img.Color) ? "No color specified" : img.Color)</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="alert alert-info mt-2">
                            <i class="fas fa-info-circle"></i> <strong>Note:</strong> The form below is pre-populated with current data. Modify colors or upload new images as needed.
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> No additional images currently set for this product.
                    </div>
                }
                
                <div class="border p-3 rounded">
                    <strong class="text-success"><i class="fas fa-edit"></i> Edit Images with Colors:</strong>
                    <div id="imageColorContainer" class="mt-2">
                        @if (Model?.product?.ProductImages != null && Model.product.ProductImages.Any())
                        {
                            @for (int i = 0; i < Model.product.ProductImages.Count; i++)
                            {
                                var productImage = Model.product.ProductImages.ElementAt(i);
                                <div class="image-color-row row mb-3 p-2 border rounded">
                                    <!-- Hidden fields to preserve existing image data -->
                                    <input type="hidden" name="ExistingImagePaths[@i]" value="@productImage.ImagePath" />
                                    <input type="hidden" name="ExistingImageIds[@i]" value="@productImage.Id" />
                                    
                                    <div class="col-md-5">
                                        <label>Image <small class="text-muted">(leave empty to keep current)</small></label>
                                        <input name="Images" type="file" class="form-control image-input" accept="image/*" />
                                        <small class="text-muted">Current: @System.IO.Path.GetFileName(productImage.ImagePath)</small>
                                    </div>
                                    <div class="col-md-4">
                                        <label>Color</label>
                                        <select name="ImageColors" class="form-control color-select">
                                            <option value="">Select Color</option>
                                            @if (Model?.AvailableColors != null)
                                            {
                                                @foreach (var color in Model.AvailableColors)
                                                {
                                                    var isSelected = string.Equals(color.Value, productImage.Color, StringComparison.OrdinalIgnoreCase) ||
                                                                     string.Equals(color.Text, productImage.Color, StringComparison.OrdinalIgnoreCase);
                                                    
                                                    @if (isSelected)
                                                    {
                                                        <option value="@color.Value" selected>@color.Text</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@color.Value">@color.Text</option>
                                                    }
                                                }
                                            }
                                        </select>
                                        <small class="text-muted">Current color: @productImage.Color</small>
                                        <!-- Hidden field to preserve current color as fallback -->
                                        <input type="hidden" name="CurrentImageColors[@i]" value="@productImage.Color" />
                                    </div>
                                    <div class="col-md-2">
                                        <label>Current Image</label>
                                        <div>
                                            <img src="~/@productImage.ImagePath" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" alt="Current" 
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                            <div style="display:none; background:#f8f9fa; border:1px dashed #ccc; width:50px; height:50px; align-items:center; justify-content:center; font-size:10px;">No Image</div>
                                        </div>
                                    </div>
                                    <div class="col-md-1 d-flex align-items-end">
                                        <button type="button" class="btn btn-danger btn-sm remove-image-row" style="@(i == 0 && Model.product.ProductImages.Count == 1 ? "display:none;" : "")">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="image-color-row row mb-3 p-2 border rounded">
                                <div class="col-md-6">
                                    <label>Image</label>
                                    <input name="Images" type="file" class="form-control image-input" accept="image/*" />
                                </div>
                                <div class="col-md-4">
                                    <label>Color</label>
                                    <select name="ImageColors" class="form-control color-select">
                                        <option value="">Select Color</option>
                                        @if (Model?.AvailableColors != null)
                                        {
                                            @foreach (var color in Model.AvailableColors)
                                            {
                                                <option value="@color.Value">@color.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="button" class="btn btn-danger btn-sm remove-image-row" style="display:none;">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                    <button type="button" id="addImageRow" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Add Another Image
                    </button>
                    <br><small class="text-muted"><i class="fas fa-info-circle"></i> Upload new images to replace existing ones, or just change colors to keep current images.</small>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="product.CategoryId" class="control-label">Category</label>
                <select asp-for="product.CategoryId" asp-items="Model.categorylist" class="form-control">
                    <option disabled>-- Select Category --</option>
                </select>
                <span asp-validation-for="product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Color" class="control-label">Available Colors (comma separated)</label>
                <input asp-for="product.Color" class="form-control" placeholder="Example: Black,White,Red" />
                <span asp-validation-for="product.Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="product.Size" class="control-label">Available Sizes (comma separated)</label>
                <input asp-for="product.Size" class="form-control" placeholder="Example: S,M,L,XL" id="sizeInput" />
                <span asp-validation-for="product.Size" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="product.IsOneSize" class="form-check-input" id="isOneSizeCheck" />
                <label asp-for="product.IsOneSize" class="form-check-label" for="isOneSizeCheck">One Size Only</label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Update Product" class="btn btn-primary btn-lg" id="saveBtn" />
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </form>
    </div>

    <!-- Preview Section -->
    <div class="col-md-4">
        <div class="card sticky-top">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="fas fa-eye"></i> Product Preview</h5>
            </div>
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(Model?.product?.Img))
                {
                    <img id="productPreview" src="~/@Model.product.Img" 
                         class="img-fluid rounded border shadow-sm" 
                         style="max-width: 100%; height: auto; min-height: 200px;" 
                         alt="Product preview" 
                         onerror="this.src='/images/placeholder.jpg'" />
                }
                else
                {
                    <img id="productPreview" src="/images/placeholder.jpg" 
                         class="img-fluid rounded border shadow-sm" 
                         style="max-width: 100%; height: auto; min-height: 200px;" 
                         alt="Product preview" />
                }
                
                <div class="mt-3">
                    <h5 class="product-name-preview text-primary">@(Model?.product?.Name ?? "Product Name")</h5>
                    <h4 class="text-success product-price-preview">
                        $@(Model?.product?.Price.ToString("0.00") ?? "0.00")
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('=== Edit Product Page Loaded ===');
            console.log('Product ID:', '@Model?.product?.Id');
            console.log('Product Name:', '@Model?.product?.Name');
            console.log('Product Images Count:', @(Model?.product?.ProductImages?.Count ?? 0));
            
            let imageRowCount = @(Model?.product?.ProductImages?.Count ?? 1);
            
            // تحقق من وجود العناصر
            const imgInput = document.querySelector('input[name="Img"]');
            const nameInput = document.querySelector('input[name="product.Name"]');
            const priceInput = document.querySelector('input[name="product.Price"]');
            const isOneSizeCheck = document.getElementById('isOneSizeCheck');
            const sizeInput = document.getElementById('sizeInput');
            const addImageRowBtn = document.getElementById('addImageRow');
            const productForm = document.getElementById('productForm');
            const saveBtn = document.getElementById('saveBtn');
            
            // Log current images on page load
            @if (Model?.product?.ProductImages != null)
            {
                @foreach (var img in Model.product.ProductImages)
                {
                    <text>console.log('Current Image: @img.ImagePath, Color: @img.Color');</text>
                }
            }
            
            // Main image preview
            if (imgInput) {
                imgInput.addEventListener('change', function() {
                    const file = this.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const productPreview = document.getElementById('productPreview');
                            if (productPreview) {
                                productPreview.src = e.target.result;
                                console.log('Main image preview updated');
                            }
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }

            // Product name live preview
            if (nameInput) {
                nameInput.addEventListener('input', function() {
                    const namePreview = document.querySelector('.product-name-preview');
                    if (namePreview) {
                        namePreview.textContent = this.value || 'Product Name';
                    }
                });
            }

            // Product price live preview
            if (priceInput) {
                priceInput.addEventListener('input', function() {
                    const pricePreview = document.querySelector('.product-price-preview');
                    if (pricePreview) {
                        const price = parseFloat(this.value) || 0;
                        pricePreview.textContent = '$' + price.toFixed(2);
                    }
                });
            }

            // One size checkbox handling
            if (isOneSizeCheck && sizeInput) {
                isOneSizeCheck.addEventListener('change', function() {
                    console.log('One size checkbox changed:', this.checked);
                    if (this.checked) {
                        sizeInput.value = 'One Size';
                        sizeInput.disabled = true;
                    } else {
                        sizeInput.disabled = false;
                        if (sizeInput.value === 'One Size') {
                            sizeInput.value = '';
                        }
                    }
                });

                // Initialize one size checkbox state
                if (isOneSizeCheck.checked) {
                    sizeInput.disabled = true;
                }
            }
            
            // Add new row for images and colors
            if (addImageRowBtn) {
                addImageRowBtn.addEventListener('click', function() {
                    console.log('Add image row clicked');
                    const container = document.getElementById('imageColorContainer');
                    if (container) {
                        const firstRow = container.querySelector('.image-color-row');
                        if (firstRow) {
                            const newRow = firstRow.cloneNode(true);
                            
                            // Clear values
                            const imageInput = newRow.querySelector('.image-input');
                            const colorSelect = newRow.querySelector('.color-select');
                            if (imageInput) imageInput.value = '';
                            if (colorSelect) colorSelect.selectedIndex = 0;
                            
                            // Remove current image preview column if it exists
                            const currentImageCol = newRow.querySelector('.col-md-2:has(img)');
                            if (currentImageCol) {
                                currentImageCol.remove();
                            }
                            
                            // Adjust column widths for new rows
                            const imageCol = newRow.querySelector('.col-md-5');
                            const colorCol = newRow.querySelector('.col-md-4');
                            const buttonCol = newRow.querySelector('.col-md-1');
                            
                            if (imageCol) imageCol.className = 'col-md-6';
                            if (colorCol) colorCol.className = 'col-md-4';
                            if (buttonCol) buttonCol.className = 'col-md-2 d-flex align-items-end';
                            
                            // Remove "Current: filename" text
                            const currentText = newRow.querySelector('small.text-muted');
                            if (currentText) currentText.remove();
                            
                            // Show delete button
                            const removeBtn = newRow.querySelector('.remove-image-row');
                            if (removeBtn) removeBtn.style.display = 'block';
                            
                            container.appendChild(newRow);
                            imageRowCount++;
                            updateRemoveButtons();
                        }
                    }
                });
            }
            
            // Delete row
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-image-row') || e.target.closest('.remove-image-row')) {
                    console.log('Remove image row clicked');
                    const button = e.target.classList.contains('remove-image-row') ? e.target : e.target.closest('.remove-image-row');
                    button.closest('.image-color-row').remove();
                    imageRowCount--;
                    updateRemoveButtons();
                }
            });
            
            function updateRemoveButtons() {
                const rows = document.querySelectorAll('.image-color-row');
                rows.forEach((row, index) => {
                    const removeBtn = row.querySelector('.remove-image-row');
                    if (removeBtn) {
                        if (rows.length > 1) {
                            removeBtn.style.display = 'block';
                        } else {
                            removeBtn.style.display = 'none';
                        }
                    }
                });
            }

            // Form validation and submission
            if (productForm && saveBtn) {
                productForm.addEventListener('submit', function(e) {
                    console.log('Form submitted');
                    
                    // Basic validation
                    if (nameInput && !nameInput.value.trim()) {
                        e.preventDefault();
                        alert('Product name is required');
                        nameInput.focus();
                        return false;
                    }
                    
                    if (priceInput && (!priceInput.value || parseFloat(priceInput.value) <= 0)) {
                        e.preventDefault();
                        alert('Product price must be greater than 0');
                        priceInput.focus();
                        return false;
                    }
                    
                    // Show loading state
                    saveBtn.disabled = true;
                    saveBtn.value = 'Updating...';
                    
                    return true;
                });
            }
            
            // Initialize remove buttons state
            updateRemoveButtons();
            
            console.log('Edit Product page initialization complete');
        });
    </script>
}