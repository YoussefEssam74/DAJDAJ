                                        @if (item.OldPrice > 0)
                                        {
                                            <span class="egp-price text-decoration-line-through text-body-tertiary fw-lighter">@item.OldPrice.ToString() EGP</span>
                                            <span class="egp-price">@item.Price.ToString("0.00") EGP</span>
                                        }
                                        else
                                        {
                                            <span class="egp-price">@item.Price.ToString("0.00") EGP</span>
                                        }
                                      
                                    </div>
                                   
                                </div>
                            </div>
