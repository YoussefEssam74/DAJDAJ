@model IPagedList<Product>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@section Styles {
    <style>
        .image-container {
            overflow: hidden;
        }

        .product-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .image-container:hover .product-image {
            transform: scale(1.1);
        }

        .egp-price {
            font-size: 14px;
            font-weight: 500;
            color: #666;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin-top: 5px;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: 0.3s ease-in-out;
        }

        .btn-outline-dark {
            border-radius: 30px;
            font-weight: 500;
            transition: all 0.3s ease-in-out;
        }

            .btn-outline-dark:hover {
                background-color: #000;
                color: #fff;
            }

        .pagination .page-link {
            border-radius: 0.5rem !important;
            padding: 4px 10px;
            margin: 0 2px;
            font-size: 0.8rem;
            color: #e83e8c;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .pagination .page-item.active .page-link {
            background: #e83e8c;
            color: #fff;
            border-color: #e83e8c;
        }

        .pagination .page-link:hover {
            background: #fce4ec;
            color: #ad1457;
        }


        .no-products {
            text-align: center;
            padding: 100px 20px;
            color: #666;
        }

            .no-products i {
                font-size: 80px;
                color: #ddd;
                margin-bottom: 20px;
            }

            .no-products h3 {
                font-weight: bold;
                margin-bottom: 10px;
            }

            .no-products p {
                font-size: 1rem;
                color: #999;
            }

            .no-products a.btn {
                margin-top: 15px;
                border-radius: 25px;
                padding: 10px 25px;
            }
    </style>
}

<!-- Main Product Section -->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        @if (Model != null && Model.Any())
        {
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image -->
                            <a href="/Customer/Home/Details/@item.Id">
                                <div class="image-container">
                                    @if (!string.IsNullOrEmpty(item.Img))
                                    {
                                        <img class="product-image" src="~/@item.Img" alt="Product Image" />
                                    }
                                    else
                                    {
                                        <img class="product-image" src="https://via.placeholder.com/300x300?text=No+Image" alt="No Image" />
                                    }
                                </div>
                            </a>
                            <!-- Product details -->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">@item.Name</h5>
                                    <h4 class="egp-price">@item.Price.ToString("0.00") EGP</h4>
                                </div>
                            </div>
                            <!-- Product actions -->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto" href="/Customer/Home/Details/@item.Id">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-center mt-4">
                @Html.PagedListPager(
                Model,
                        page => Url.Action("Index", new { page }),
                        new PagedListRenderOptions
                        {
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link", "rounded-pill", "shadow-sm", "text-dark" },
                            UlElementClasses = new[] { "pagination", "pagination-lg", "gap-2", "border-0" },
                            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                            DisplayLinkToLastPage = PagedListDisplayMode.Always,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always,
                            LinkToFirstPageFormat = "<i class='bi bi-chevron-double-left'></i>",
                            LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                            LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                            LinkToLastPageFormat = "<i class='bi bi-chevron-double-right'></i>"
                        }
                        )
        </div>
                }
        else
        {
            <div class="no-products">
                <i class="fas fa-box-open"></i>
                <h3>No Products Available</h3>
                <p>@ViewBag.Message</p>
                @if (User.IsInRole("Admin"))
                {
                    <a href="/Admin/Product/Create" class="btn btn-primary">Add New Product</a>
                }
            </div>
        }
    </div>
</section>



