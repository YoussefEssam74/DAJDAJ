@page
@model IndexModel
<h3 class="mb-4 text-center text-pink fw-bold">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="profile-form" method="post" class="p-4 rounded-4 shadow-sm bg-light">

            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Username -->
            <div class="form-floating mb-4">
                <input asp-for="Username"
                       class="form-control border-pink shadow-sm"
                       placeholder="Please choose your username."
                       disabled />
                <label asp-for="Username" class="form-label text-muted"></label>
            </div>

            <!-- Phone Number -->
            <div class="form-floating mb-4">
                <input asp-for="Input.PhoneNumber"
                       class="form-control border-pink shadow-sm"
                       placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label text-muted"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button id="update-profile-button"
                    type="submit"
                    class="w-100 btn btn-lg btn-pink shadow-sm fw-bold">
                ♡ Save
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .text-pink {
        color: #d63384;
    }

    .border-pink {
        border: 2px solid #f8a5c2;
        border-radius: 12px;
    }

    .btn-pink {
        background-color: #f78fb3;
        border: none;
        color: white;
        border-radius: 12px;
        transition: background-color 0.3s ease;
    }

        .btn-pink:hover {
            background-color: #e84393;
        }

    .form-control:focus {
        border-color: #f78fb3;
        box-shadow: 0 0 8px rgba(247, 143, 179, 0.5);
    }

    .bg-light {
        background-color: #fff8f9 !important;
    }
</style>
