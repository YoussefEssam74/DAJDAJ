@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-center text-pink fw-bold mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="change-password-form" method="post" class="p-4 rounded-4 shadow-sm bg-light">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Old Password -->
            <div class="form-floating mb-4">
                <input asp-for="Input.OldPassword"
                       class="form-control border-pink shadow-sm"
                       autocomplete="current-password"
                       aria-required="true"
                       placeholder="Please enter your old password." />
                <label asp-for="Input.OldPassword" class="form-label text-muted"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <!-- New Password -->
            <div class="form-floating mb-4">
                <input asp-for="Input.NewPassword"
                       class="form-control border-pink shadow-sm"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Please enter your new password." />
                <label asp-for="Input.NewPassword" class="form-label text-muted"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword"
                       class="form-control border-pink shadow-sm"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Please confirm your new password." />
                <label asp-for="Input.ConfirmPassword" class="form-label text-muted"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-100 btn btn-lg btn-pink fw-bold shadow-sm">
                🔒 Update Password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .text-pink {
        color: #d63384;
    }

    .border-pink {
        border: 2px solid #f8a5c2;
        border-radius: 12px;
    }

    .btn-pink {
        background-color: #f78fb3;
        border: none;
        color: white;
        border-radius: 12px;
        transition: background-color 0.3s ease;
    }

        .btn-pink:hover {
            background-color: #e84393;
        }

    .form-control:focus {
        border-color: #f78fb3;
        box-shadow: 0 0 8px rgba(247, 143, 179, 0.5);
    }

    .bg-light {
        background-color: #fff8f9 !important;
    }
</style>
