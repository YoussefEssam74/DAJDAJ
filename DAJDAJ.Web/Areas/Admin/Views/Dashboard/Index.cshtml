@{
    ViewBag.PageTitle = "Admin Area";
    ViewBag.CardTitle = "Dashboard";
}
<!-- Ionicons -->
<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

<div class="row">
    <!-- Products -->
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="small-box bg-danger shadow">
            <div class="inner">
                <h3>@ViewBag.Products</h3>
                <p>Products</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="/Admin/Product/" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- All Orders -->
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="small-box bg-info shadow">
            <div class="inner">
                <h3>@ViewBag.Orders</h3>
                <p>All Orders</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="/Admin/Order/" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <!-- On Booked Orders -->
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="small-box bg-primary shadow">
            <div class="inner">
                <h3>@ViewBag.BookedOrders</h3>
                <p>Booked Orders</p>
            </div>
            <div class="icon">
                <i class="ion ion-bookmark"></i>
            </div>
            <a href="/Admin/Order/Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <!-- Earned Orders -->
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="small-box bg-success shadow">
            <div class="inner">
                <h3>@ViewBag.EarnedOrders</h3>
                <p>Earned Orders</p>
            </div>
            <div class="icon">
                <i class="ion ion-cash"></i>
            </div>
            <a href="/Admin/Order/Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>




    <!-- On Return Orders -->
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="small-box bg-warning shadow">
            <div class="inner">
                <h3>@ViewBag.ReturnedOrders</h3>
                <p> Returned Orders</p>
            </div>
            <div class="icon">
                <i class="ion ion-refresh"></i>
            </div>
            <a href="/Admin/Order/Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <!-- Cancelled Orders -->
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="small-box bg-secondary shadow">
            <div class="inner">
                <h3>@ViewBag.CancelledOrders</h3>
                <p>Cancelled Orders</p>
            </div>
            <div class="icon">
                <i class="ion ion-close"></i>
            </div>
            <a href="/Admin/Order/Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <!-- All Users -->
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="small-box bg-warning shadow">
            <div class="inner">
                <h3>@ViewBag.Users</h3>
                <p>User Registrations</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="/Admin/Users/" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <!-- Google Users -->
    <div class="col-lg-3 col-md-6 col-12 mb-4">
        <div class="small-box bg-primary shadow">
            <div class="inner">
                <h3>@ViewBag.GoogleUsers</h3>
                <p>Users via Google</p>
            </div>
            <div class="icon">
                <i class="ion ion-social-google"></i>
            </div>
            <a href="" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

</div>
