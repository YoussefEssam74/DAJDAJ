﻿@using Microsoft.AspNetCore.Http
@using DAJDAJ.Utilities
@inject IHttpContextAccessor httpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>DAJDAJ</title>

    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Customer/css/styles.css" rel="stylesheet" />

    <!-- Animated Header Background Style -->
    <style>
        .bg-dark-custom-animated {
            background: linear-gradient(-45deg, #ffb6c1, #ff69b4, #f06292, #ffc0cb);
            background-size: 400% 400%;
            animation: gradientBG 10s ease infinite;
        }

        @@keyframes gradientBG {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }
    </style>

    <!-- Dynamic Styles Section -->
    @RenderSection("Styles", required: false)
</head>
<body>

    <header id="header" class="bg-dark-custom-animated  py-3">
        <div class="d-flex text-white align-items-center justify-content-center flex-column">
            <p class="display-6 fw-bolder mb-0 pb-0">DAJDAJ</p>
            <p class="lead fw-normal text-white-50 my-0">By women to women ♡</p>
        </div>
       
    </header>

    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <div class="d-flex w-100 justify-content-between align-items-center">
                <!-- Left: Hamburger menu -->
                <button class="navbar-toggler border-0 p-0" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Center: Logo (desktop only) -->
                <!-- Right: Cart icon with badge -->
                <form class="d-flex" method="get" action="/Customer/Cart/Index">
                    <button type="submit" class="btn btn-link p-0 position-relative" style="font-size: 1.7rem; color: #212529;">
                        <i class="bi bi-bag"></i>
                        @(await Component.InvokeAsync("ShoppingCartCount"))
                    </button>
                </form>
            </div>
            <!-- Collapsible navigation content -->
            <div class="collapse navbar-collapse mt-2" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                       @if(User.IsInRole(SD.AdminRole))
                        {
                            <li class="nav-item"><a class="nav-link active" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>

                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">Setting</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="Identity/Account/Manage">Edit Profile</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
                <div class="d-flex align-items-center">
                    <partial name="_LoginPartial" />
                </div>

    </nav>

    <!-- Header -->
    @* <header class="bg-dark-custom-animated py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">DAJDAJ</h1>
                <p class="lead fw-normal text-white-50 mb-0">By women to women ♡</p>
            </div>
        </div>
    </header> *@

    <!-- Page Content -->
    @RenderBody()
    <footer class="py-5 bg-dark">
        <div class="container text-center">
            <p class="m-0 text-white mb-3">&copy; DAJDAJ 2025</p>

            <!-- Social Media Icons -->
            <div class="d-flex justify-content-center align-items-center gap-4 mb-3">
                <!-- Instagram Icon -->
                <a href="https://www.instagram.com/dajdaj.eg/" target="_blank" class="text-white" style="font-size: 28px;">
                    <i class="bi bi-instagram"></i>
                </a>

                <!-- TikTok Icon -->
                <a href="https://www.tiktok.com/@@dajdaj.eg" target="_blank">
                    <img src="~/Images/tiktok-brands-solid-full.svg" alt="TikTok"
                         style="width: 28px; height: 28px; filter: brightness(0) invert(1);" />
                </a>
            </div>

            <!-- Contact Info -->
            <p class="text-white-50 mb-3">
                Contact us via Instagram or TikTok for more info.
            </p>

            <!-- Policy Link -->
            <div class="d-flex justify-content-center align-items-center gap-4">
                <a asp-area="Customer" asp-controller="Home" asp-action="Returns"
                   class="text-white policy-link">
                    Privacy Policy
                </a>
            </div>

            <!-- Style -->
            <style>
                .policy-link {
                    position: relative;
                    text-decoration: underline;
                    color: #f06292;
                    font-weight: 500;
                    transition: color 0.2s;
                }

                .policy-link:active,
                .policy-link:focus {
                        color: #f06292;
                    outline: none;
                }
            </style>
        </div>
    </footer>









    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Core theme JS-->
    <script src="~/Customer/js/scripts.js"></script>

    <!-- Extra Styles -->
    <style>
        .product-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }
    </style>

    <!-- Optional Scripts Section -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>